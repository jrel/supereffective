{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "CI",
    "LOCALE_LANGUAGE",
    "DEBUG_MODE",
    "VERCEL_ENV",
    "VERCEL_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "NEXTAUTH_URL_INTERNAL",
    "EMAIL_SMTP_USER",
    "EMAIL_SMTP_PASSWORD",
    "EMAIL_SMTP_HOST",
    "EMAIL_SMTP_PORT",
    "EMAIL_DEFAULT_FROM",
    "EMAIL_PROVIDER",
    "RESEND_API_KEY",
    "DATABASE_URL",
    "DIRECT_DATABASE_URL",
    "SHADOW_DATABASE_URL"
  ],
  "globalDependencies": [".env", "tsconfig.json"],
  "pipeline": {
    "build": {
      "description": "A package's `build` script depends on that package's dependencies and devDependencies `build` tasks being completed first. The `^` symbol signifies `upstream script`.",
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "data/**", "repositories/**"],
      "outputMode": "new-only"
    },
    "codegen": {
      "dependsOn": ["^codegen"],
      "outputs": [
        "data.head",
        "data/**",
        "styled-system/**",
        "@prisma/client/**",
        "repositories/**",
        "prisma/**"
      ]
    },
    "//#pretty:all": {
      "description": "Run the pretty:all script from the root package ('`//#` signifies `root package`)",
      "outputs": [],
      "outputMode": "new-only"
    },
    "//#lint:all": {
      "outputs": [],
      "outputMode": "new-only"
    },
    "//#lint:all:fix": {
      "outputs": [],
      "outputMode": "new-only"
    },
    "//#format:all": {
      "outputs": [],
      "outputMode": "new-only"
    },
    "//#test:all": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:beta": {
      "cache": false,
      "persistent": true
    }
  }
}
